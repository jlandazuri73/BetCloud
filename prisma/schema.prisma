// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Usuario
model User {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  email        String    @unique
  password     String
  name         String
  userName     String
  completed    Boolean   @default(false)
  isVIP        Boolean   @default(false)
  datePayment  DateTime?
  payCompleted Boolean?  @default(false)
  state        Boolean   @default(true)
  profile      String    @default("https://w7.pngwing.com/pngs/973/860/png-transparent-anonym-avatar-default-head-person-unknown-user-user-pictures-icon-thumbnail.png")
  role         Role      @relation(fields: [roleId], references: [id])
  roleId       String
}

// Roles
model Role {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  User      User[]
}

// Predicciones
model Predictions {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  team_local        String
  team_visiting     String
  ligue             String
  ligue_img         String
  hour              String
  prediction        String
  odds              Float
  status_prediction String
  type_user         String // FREE || VIP
  gols_local        Int?
  gols_visiting     Int?
}
